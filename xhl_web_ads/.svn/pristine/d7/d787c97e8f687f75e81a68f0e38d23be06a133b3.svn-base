.auth-box .op_box {
	display: block;
	padding: 5px;
	border-radius: 3px;
	text-align: center;
	//margin-top: 5px;
	margin: 5px 20px 10px 20px;
}

.auth-box .op_error {
	background: #fbb;
}

.auth-box .op_wait {
	background: #ccc;
}

