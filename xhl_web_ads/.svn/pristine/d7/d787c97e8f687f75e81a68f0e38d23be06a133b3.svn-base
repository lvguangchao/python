#leftside {
	width: 560px;
	height: 560px;
	padding-top: 60px;
	background: url(../img/login/side-001.jpg) 0 0 no-repeat;
}

@media screen and (max-width: 990px) {
	#leftside {
		display: none;
	}
}

#leftside h1 {
	font-size: 24px;
	color: #888;
}

#leftside p {
	font-size: 18px;
	color: #888;
	padding-left: 24px;
}

.auth-box .inputbox {
	margin-bottom: 10px;
}

.auth-box-lg .inputbox {
	margin-bottom: 20px;
}

