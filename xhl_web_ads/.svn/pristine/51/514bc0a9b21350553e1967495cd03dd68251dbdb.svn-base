.footer {
	width: 100%;
	height: @footer-height;
	line-height: @footer-height;
	background-color: @top-toolbar-bg;
	border-top: 1px solid darken(@top-toolbar-bg, 20%);
	border-bottom: 1px solid lighten(@top-toolbar-bg, 10%);
	//box-shadow: 0 0 2px rgba(0, 0, 0, .3);
	z-index: 998;

	&.footer-fixed-bottom {
		bottom: 0;
		position: fixed;
	}

	text-align: center;
}

.row-sm {
	.col-sm-1, .col-sm-2, .col-sm-3, .col-sm-4, .col-sm-5, .col-sm-6, .col-sm-7, .col-sm-8, .col-sm-9, .col-sm-10, .col-sm-11 {
		padding-right: 5px;
		padding-left: 5px;
	}

}

