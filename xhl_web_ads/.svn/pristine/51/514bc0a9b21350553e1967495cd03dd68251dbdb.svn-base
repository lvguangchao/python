.jstree-ocl {
	cursor: default;
}

.jstree-default {
	.fa-folder:before {
		color: @color-text-warning;
	}

	.jstree-wholerow {
		cursor: default;
	}

	& > ul > li {
		//margin:3px 0;
		padding: 4px 0;
		//height:36px;
	}

	.jstree-node {
		margin-left: 12px;
		//min-width: 24px;
	}

	.jstree-open > .jstree-anchor > .fa-folder:before {
		content: '\f07c';
		color: darken(@color-text-warning, 20%);
	}

	& > .jstree-no-dots .jstree-closed > .jstree-ocl, & > .jstree-no-dots .jstree-open > .jstree-ocl {
		background: none;

		&:before {
			font-style: normal;
			font-family: "FontAwesome";
		}
	}

	& > .jstree-no-dots .jstree-closed > .jstree-ocl:before {
		content: '\f054';
		//margin-right: -8px;
		color: #ccc;
	}

	& > .jstree-no-dots .jstree-open > .jstree-ocl:before {
		content: '\f078';
		color: #666;
	}

	& > .jstree-no-dots .jstree-loading > .jstree-ocl {
		//background: url("img/throbber.gif") center center no-repeat;
		background: url("img/loading_01.gif") center center no-repeat;

		&:before {
			content: '';
		}

	}
}

