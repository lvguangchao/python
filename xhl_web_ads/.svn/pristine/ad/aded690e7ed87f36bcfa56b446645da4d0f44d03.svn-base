// 通用

html {
	font-family: sans-serif;
}

body {
	font-family: "Microsoft YaHei", "微软雅黑", Arial, sans-serif;
	font-size: 14px;
	line-height: 1.42857143;
	color: #333;
	cursor: default;
}

body,
h1,
h2,
h3,
p,
ul {
	padding: 0;
	margin: 0;
}

ul {
	list-style: none;
}

a {
	color: #333;
	text-decoration: none;
	transition-property: color, background-color, border-color;
	transition-duration: 0.3s;
	transition-timing-function: ease;
}

input {
	outline: none;
}

::placeholder {
	color: #a5a5a5;
}

.wrap {
	width: 1000px;
	margin: 0 auto;
}

.btn {
	display: inline-block;
	text-decoration: none;
}
.wrap,
.data .body .row,
.data .head {
	&::after,
	&::before {
		display: table;
		content: "";
	}
}
.wrap,
.data .body .row,
.data .head
 {
	&::after {
		clear: both;
	}
}


.header {
	height: 70px;
	background: #333;

	.wrap {
		width: 1200px;
	}

	.logo {
		float: left;

		a {
			display: block;
			width: 130px;
			height: 70px;
			color: #fff;
			text-indent: -9999em;
			background: url("../img/logo.png") center no-repeat;
		}
	}
	// 导航
	.nav {
		float: left;
		margin-left: 100px;

		li {
			float: left;

			a {
				display: block;
				color: #fff;
				line-height: 70px;
				padding: 0 20px;

				&:hover {
					background: #3d3d3d;
				}
			}
		}
	}
	// 注册 登录
	.log {
		float: right;

		li {
			float: left;
			padding-top: 25px;
			margin-left: 10px;

			a {
				color: #9a9a9a;

				&:hover {
					color: #fff;
				}
			}
		}
	}
}
// banner

.banner {
	min-width: 1000px;
	height: 260px;
	background: url("../img/banner.jpg") center top no-repeat;
	h2 {
		text-indent: -9999em;
	}
	.range {
		font-size: 16px;
		color: #fff;
		text-align: center;
		padding: 100px 0 0;
	}
}
// 筛选

.filter {
	width: 100%;
	padding: 30px 0 15px;
	position: relative;
	z-index: 1;
	// margin: -100px auto 0;
	background-color: transparent;
	border-color: transparent;
	transition: background-color .1s ease;

	.wrap {
		position: relative;
	}
}

.item {
	position: relative;
	// float: left;
	font-size: 16px;
	padding-left: 130px;
	margin-bottom: 20px;

	&::before,
	&::after {
		display: table;
		content: "";
	}

	&::after {
		clear: both;
	}

	span {
		position: absolute;
		top: 0;
		left: 0;
		line-height: 30px;
		// color: #6f7cda;
		padding-right: 20px;
	}

	a {
		// position: relative;
		// display: inline-block;
		float: left;
		min-width: 50px;
		line-height: 30px;
		color: #666;
		text-align: center;
		padding: 0 15px;
		margin: 0 10px 10px 0;

		background: #f2f2f2;

		border-radius: 2px;

		// &::after {
		// 	position: absolute;
		// 	z-index: -1;
		// 	top: 0;
		// 	left: 0;
		// 	display: block;
		// 	width: 100%;
		// 	height: 100%;
		// 	content: "";
		// 	background: #2c3387;
		// 	transform: skewX(-20deg);
		// }

		&.active,
		&:hover {
			color: #fff;
			background: #05a4ee;

			// &::after {
			// 	background: #276bc8;
			// }
		}
	}
}

.btn-search {
	float: right;
	width: 160px;
	font-size: 16px;
	color: #fff;
	line-height: 40px;
	text-align: center;
	margin: 10px auto;
	background: #05a4ee;
	border-radius: 2px;

	&:hover {
		background: #05acf9;
	}
	&:active {
		background: #059ee5;
	}

}

.search-info-tip {
	opacity: 0;
	filter:alpha(opacity=0);
	margin: 0 160px;
	transform: translateY(-10px);
	text-align: center;
	padding-top: 20px;
	transition-property: opacity, transform;
	transition-duration: .3s;
	transition-timing-function: ease;

	&.in {
		transform: translateY(0);
		opacity: 1;
		filter:alpha(opacity=100);
	}
}

.search {
	position: absolute;
	z-index: 1;
	top: -4px;
	right: 0;
	// float: right;
	// padding-top: 1px;
	// margin-top: -36px;

	input {
		line-height: 20px;
		color: #a5a5a5;
		padding: 8px 40px 8px 10px;
		background: #ededed;
		border: solid 1px #d1d1d1;
		border-radius: 3px;
		transition: border-color 0.3s ease;

		&:focus {
			border-color: #05a4ee;
		}
	}

	a {
		position: absolute;
		top: 1px;
		right: 1px;
		padding: 5px 0;

		&::after {
			position: absolute;
			top: 8px;
			left: -3px;
			width: 1px;
			height: 20px;
			content: "";
			background: #d1d1d1;
		}
	}

	.icon-search {
		display: block;
		width: 26px;
		height: 26px;
		background: url("../img/icon-search.png") center no-repeat;
	}
}

.selected {
	color: #666;
	margin-top: 40px;
	span {
		display: inline-block;
		padding: 0 8px;
		background: #dfdfdf;
		border-radius: 2px;
		margin-right: 5px;
	}
}

.more {
	font-size: 12px;
	text-align: center;

	i {
		display: inline-block;
		width: 14px;
		height: 14px;
		vertical-align: middle;
		margin-top: -2px;
		background: ~"url(../img/sprite.png) 0 -130px";
		transition: all .2s ease;
	}
	a {
		color: #666;
		&:hover {
			color: #0296fd;

			i {
				background-position: 0 -144px;
			}
		}
	}

	&.open {
		i {
			transform: rotate(180deg);
		}
	}
}

// 数据

.data {
	margin-bottom: 40px;

	.head {
		width: 1000px;
		line-height: 60px;
		color: #fff;
		// border-top: solid 20px #fff;
		border-radius: 5px 5px 0 0;
	}

	span[class^="row"] {
		float: left;
		min-height: 1px;
	}

	.icon-male,
	.icon-female {
		width: 14px;
		height: 14px;
		margin-top: -2px;
		background-image: ~"url(../img/sprite.png)";
	}
	.icon-male {
		background-position: -14px -130px;
	}
	.icon-female {
		background-position: -14px -144px;
	}

	.head {
		[class^="row"] {
			background: #05a4ee;
		}
		.row-1 {
			border-top-left-radius: 5px;
		}
		.row-5 {
			width: 210px;
			border-top-right-radius: 5px;
		}
	}

	.body .row {
		height: 50px;
		padding: 15px 0;
		border-bottom: solid 1px #f1f1f1;
	}

	.row-1 {
		width: 100px;
		text-align: center;
	}

	.row-2 {
		width: 360px;
		padding-left: 20px;

		p {
			white-space: nowrap;
			overflow: hidden;
			text-overflow: ellipsis;
			padding: 3px 10px 3px 0;

			span.anchor-name {
				cursor: pointer;
			}
		}

		.platform {
			position: relative;
			display: inline-block;
			font-size: 12px;
			line-height: 18px;
			color: #05a4ee;
			padding: 0 10px;
			margin-right: 8px;
			background: #ebf8fe;
			border: solid 1px #58caff;
			border-radius: 2px;

			&::after {
				position: absolute;
				top: 3px;
				right: -8px;
				width: 1px;
				height: 12px;
				content: "";
				background: #e1e1e1;
			}
		}

		.channel {
			font-size: 12px;
			color: #999;
		}
	}

	.row-3 {
		width: 140px;
	}

	.row-4 {
		width: 170px;
	}

	.row-5 {
		width: 100px;
	}


	.row-6 {
		width: 110px;
	}

	em {
		display: inline-block;
		width: 48px;
		font-style: normal;
		line-height: 24px;
		margin-top: 16px;

		&.first,
		&.second,
		&.third {
			color: #fff;
			border-radius: 2px;
		}

		&.first {
			background: #ff03a4;
		}

		&.second {
			background: #ff6000;
		}

		&.third {
			background: #38c717;
		}
	}
	// .body .row-2 {
	// 	position: relative;
	// 	width: 190px;
	// 	padding-left: 70px;
	// }
	.body {
		.row-3,
		.row-4,
		.row-5,
		.row-6 {
			padding-top: 16px;
		}
		.row-3 {
			font-weight: bold;
			color: #ff0012;
		}
	}

	img {
		position: absolute;
		top: 0;
		left: 0;
		margin-right: 18px;
		border-radius: 50%;
	}

	[class^="icon"] {
		display: inline-block;
		vertical-align: middle;
		background-image: url("../img/sprite.png");
	}

	.icon-down,
	.icon-up {
		width: 10px;
		height: 10px;
		margin-top: -2px;
	}

	.icon-up {
		background-position: 0 0;
	}

	.icon-down {
		background-position: -10px 0;
	}

	[class^="icon-level"] {
		width: 24px;
		height: 24px;
	}

	.icon-level-s-p {
		background-position: 0 -10px;
	}

	.icon-level-s {
		background-position: 0 -34px;
	}

	.icon-level-a {
		background-position: 0 -58px;
	}

	.icon-level-b {
		background-position: 0 -82px;
	}

	.icon-level-c {
		background-position: 0 -106px;
	}

	.btn-live-room {
		line-height: 18px;
		padding: 4px 10px;
		margin-left: 20px;
		border: solid 1px #c6c6c6;
		border-radius: 2px;

		&:hover {
			color: #05a4ee;
			border-color: #05a4ee;
		}
	}

	.note {
		color: #999;
		margin-top: 20px;
	}
}

.footer {
	line-height: 1.5;
	color: #545a87;
	padding: 70px 0 80px;
	background: #01061d;
	h3 {
		margin-bottom: 20px;
	}
	a {
		color: inherit;
		&:hover {
			color: #fff;
			text-decoration: underline;
		}
	}

	.row {
		float: left;
		width: 450px;
		+ .row {
			margin-left: 100px;
		}
	}

	span {
		display: inline-block;
		width: 200px;
		margin-right: 20px;
	}

	p {
		text-align: center;
		margin-top: 40px;
		border-top: solid 1px #101630;
		padding-top: 30px;
	}
}

