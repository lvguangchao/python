// 用户详情
.detail {
	position: absolute;
	z-index: 1003;

	display: none;

	box-shadow: 3px 3px 10px rgba(0,0,0, .3);

	.content {
		width: 280px;
		height: 160px;
		padding: 10px;
		background: #fff;
		border-radius: 5px;
	}

	a {
		position: absolute;
		top: 0;
		right: 15px;
		font-size: 20px;
	}

	img {
		position: absolute;
		top: 20px;
		left: 10px;
	}

	p {
		padding: 15px 0 10px 70px;
	}
	span {
		display: block;
		font-size: 12px;
		padding: 0 0 20px 70px;
	}

	ul {
		font-size: 12px;
		line-height: 20px;
		padding-top: 10px;
		border-top: solid 1px #dedede;
	}

	.icon-loading {
		position: absolute;
		top: 50%;
		left: 50%;
		width: 39px;
		height: 39px;
		margin: -20px;
		background: ~"url(../img/loading.gif)";
	}

	.arrow {
		position: absolute;
		left: -6px;
		top: 20px;
		width: 10px;
		height: 10px;
		background: #fff;
		box-shadow: 0 0 5px rgba(0,0,0, .2);
		transform: rotate(-45deg);
		z-index: -1;
	}
}

.mask {
	position: fixed;
	z-index: 1001;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;
	display: none;
	background: transparent;
}
